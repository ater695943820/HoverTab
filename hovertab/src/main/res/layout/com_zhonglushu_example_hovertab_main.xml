<?xml version="1.0" encoding="utf-8"?>
<com.zhonglushu.example.hovertab.views.CustomPullDownRefreshLinearLayout
    android:id="@+id/com_zhonglushu_example_hovertab_custom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhonglushu.example.hovertab.views.ObservableRefreshView
        android:id="@+id/com_zhonglushu_example_hovertab_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffff"
        app:customRefreshStyle="header"/>

    <FrameLayout
        android:id="@+id/com_zhonglushu_example_hovertab_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/com_zhonglushu_example_hovertab_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/com_zhonglushu_example_hovertab_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff00ff"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/com_zhonglushu_example_hovertab_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/com_zhonglushu_example_hovertab_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</com.zhonglushu.example.hovertab.views.CustomPullDownRefreshLinearLayout>